{
  "name": "quran-meta",
  "description": "Library with meta data and functionality related to Holy Quran",
  "keywords": [
    "quran",
    "koran",
    "metadata",
    "surah",
    "juz"
  ],
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "browser": "dist/quran-meta.js",
  "jsdelivr": "dist/quran-meta.js",
  "unpkg": "dist/quran-meta.js",
  "main": "dist/quran-meta.js",
  "module": "lib_es5/index.js",
  "repository": {
    "type": "git",
    "url": "git+https@github.com:quran-center/quran-meta.git",
    "directory": "packages/quran-meta"
  },
  "files": [
    "src/",
    "dist/",
    "lib/",
    "lib_es5/"
  ],
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "eslint": "eslint ./src --ext .js --fix",
    "build": "npm run build-universal && npm run build-module && npm run build-submodule",
    "build-universal": "rollup -c config/rollup/dist/umd.js && rollup -c config/rollup/dist/umd-min.js",
    "build-module": "rollup -c config/rollup/module/umd.js && rollup -c config/rollup/module/es.js",
    "build-submodule": "rollup -c config/rollup/module/cjs-all.js && rollup -c config/rollup/module/es-all.js",
    "prepare-npm-package": "rimraf lib && rimraf lib_es && rimraf dist && mkdir lib && copyfiles package.json README.md LICENSE ./lib && npm run build",
    "test": "jest",
    "coverage": "jest --coverage",
    "verify": "npm run eslint && npm run coverage",
    "jsdoc": "jsdoc --configure .jsdoc.json",
    "deploy": "rollup -c config/rollup_dist.js && cp dist/voca.js docs/scripts && scp -r docs/* rainishere:/home/rainishere/webapps/voca_docs",
    "precommit": "lint-staged && jest --onlyChanged"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-transform-modules-commonjs": "7.9.0",
    "@babel/plugin-transform-arrow-functions": "latest",
    "@babel/plugin-transform-block-scoping": "7.7.4",
    "@babel/plugin-transform-destructuring": "7.7.4",
    "@babel/plugin-transform-object-assign": "7.7.4",
    "@babel/plugin-transform-parameters": "7.7.7",
    "@babel/plugin-transform-shorthand-properties": "7.7.4",
    "@babel/plugin-transform-spread": "7.7.4",
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-json": "^4.0.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.3.0",
    "babel-plugin-module-resolver": "4.0.0",
    "copyfiles": "latest",
    "eslint": "6.8.0",
    "jest": "^25.2.7",
    "jsdoc": "3.6.4",
    "prettier": "2.0.4",
    "rimraf": "latest",
    "rollup": "^2.6.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-uglify": "6.0.4",
    "source-map-support": "0.5.16"
  }
}
